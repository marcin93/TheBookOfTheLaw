<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tvChapTwo"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvHeadComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/headChapTwo"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="309dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvHeadComment" >

        <TextView
            android:id="@+id/tvChapTwoMain"
            android:layout_width="319dp"
            android:layout_height="5971dp"
            android:layout_gravity="top|center"
            android:padding="10dp"
            android:text="@string/ChapTwo" />

    </ScrollView>

</RelativeLayout>